version: '3.9'
services:
  nginx:
    image: nginx:1.21
    container_name: ${COMPOSE_PROJECT_NAME}_nginx
    restart: unless-stopped
    ports:
      - "88:80"
    volumes:
      - './:/var/www'
      - './docker/nginx/nginx.conf:/etc/nginx/nginx.conf'
      - './docker/nginx/sites-available/:/etc/nginx/sites-available'
    working_dir: /var/www
    depends_on:
      - app
    networks:
      - app-network

  app:
    &base-app
    build:
      context: './docker/app'
      args:
        UID: ${DOCKER_UID}
        GID: ${DOCKER_GID}
    container_name: ${COMPOSE_PROJECT_NAME}_app
    restart: unless-stopped
    ports:
        - "5173:5173"
    volumes:
      - './:/var/www'
      - './docker/app/php-ini-overrides.ini:/usr/local/etc/php/conf.d/40-custom.ini'
    environment:
      XDEBUG_MODE: ${XDEBUG_MODE:-off}
      XDEBUG_CONFIG: client_host=host.docker.internal idekey=PHPSTORM start_with_request=no
      PHP_IDE_CONFIG: serverName=Docker
    extra_hosts:
      - host.docker.internal:host-gateway
    working_dir: /var/www
    networks:
      - app-network

  worker:
    <<: *base-app
    ports:
      - "8081:8080"
    container_name: ${COMPOSE_PROJECT_NAME}_worker
    command: php artisan queue:work

  redis:
    image: redis
    container_name: ${COMPOSE_PROJECT_NAME}_redis
    restart: unless-stopped
    ports:
      - '6382:6379'
    volumes:
      - 'redis_data:/data'
    networks:
      - app-network

  pg:
    image: postgres:13.2
    container_name: ${COMPOSE_PROJECT_NAME}_pg
    restart: unless-stopped
    ports:
      - '5434:5432'
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: root
      POSTGRES_DB: ap
      POSTGRES_HOST_AUTH_METHOD: trust
      POSTGRESQL_MAX_OPEN_CONNS: 2000
    volumes:
      - 'pg_data:/var/lib/postgresql/data'
      - 'pg_data:/temp'
    networks:
      - app-network

networks:
  app-network:
    driver: bridge

volumes:
  pg_data:
    name: ${COMPOSE_PROJECT_NAME}_pg_data
    driver: local
  redis_data:
    name: ${COMPOSE_PROJECT_NAME}_redis_data
    driver: local
